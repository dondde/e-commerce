@model Travail1.Models.Vendeur

@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Profil du vendeur</h2>

    <div class="row">
        <div class="col">
            <h3>Informations personnelles</h3>
            <p><strong>Nom:</strong> @Model.LastName</p>
            <p><strong>Prénom:</strong> @Model.FirstName</p>
            <p><strong>Adresse:</strong> @Model.Address</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Date de naissance:</strong> @Model.DateOfBirth.ToShortDateString()</p>
            <p><strong>Ville:</strong> @Model.City</p>
            <p><strong>Statut Vendeur:</strong> @Model.StatutVendeur</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <h3>Articles en vente</h3>
            @if (Model.ArticlesEnVente != null && Model.ArticlesEnVente.Any())
            {
                <ul>
                    @foreach (var article in Model.ArticlesEnVente)
                    {
                        <li>@article.Name - @article.Console</li>
                    }
                </ul>
            }
            else
            {
                <p>Aucun article en vente pour le moment.</p>
            }
        </div>
    </div>
</div>
