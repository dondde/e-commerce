@{
    Layout = "_Layout";
}

<form class="d-flex">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
@model List<Travail1.Models.Game>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var game in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@game.BackgroundImage" class="bd-placeholder-img card-img-top" alt="@game.Name" style="width: 100%; height: 225px; object-fit: cover;">
                    <div class="card-body">
                        <h3>@game.Name</h3>
                        @if (!string.IsNullOrEmpty(game.Released))
                        {
                            <p class="card-text">
                                Released: @game.Released.Substring(0, 4)
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(game.Console))
                        {
                            <p class="card-text">
                                Console: @game.Console
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(game.Genre))
                        {
                            <p class="card-text">
                                Genre: @game.Genre
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(game.Publisher))
                        {
                            <p class="card-text">
                                Publisher: @game.Publisher
                            </p>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">More Details</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

}
else
{
    <div class="alert alert-warning" role="alert">
        Aucun jeu trouvé.
    </div>
}